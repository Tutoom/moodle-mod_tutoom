{{!
    @template mod_tutoom/recordings_pagination

    This template renders the recordings pagination section.

    Example context (json):
    {
        "pages": [],
    }
}}

<div class="tutoom-recordings-pagination">
    <div class="tutoom-recordings-pagination-wrapper">
        <input type="hidden" id="tutoom-recordings-current-page" value="{{currentPage}}">
        <button id="tutoom-recordings-btn-previous" class="previous {{#disablePrevious}}disabled{{/disablePrevious}}">Previous</button>
        {{#pages}}
            <button class="btn-page {{#isSelected}}selected{{/isSelected}}" name="btn-page" value="{{number}}">{{number}}</button>
        {{/pages}}
        <button id="tutoom-recordings-btn-next" class="next {{#disableNext}}disabled{{/disableNext}}">Next</button>
    </div>
</div>
